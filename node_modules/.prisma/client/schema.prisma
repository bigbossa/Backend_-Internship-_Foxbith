generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model OrderInternship {
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  orderNumber String      @unique
  name        String
  item        String
  quantity    Int
  price       Int
  subtotal    Float
  status      OrderStatus @default(Pending)
  date        DateTime    @default(now())
}

enum OrderStatus {
  Pending
  Completed
  Cancelled
}
